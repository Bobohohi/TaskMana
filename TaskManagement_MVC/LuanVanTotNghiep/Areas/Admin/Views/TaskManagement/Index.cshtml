@model IEnumerable<LuanVanTotNghiep.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // Đã sửa đúng layout
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách nhiệm vụ</h2>
        <a asp-action="Create" class="btn btn-primary">+ Tạo mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.First().TaskId)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                    <th>@Html.DisplayNameFor(m => m.First().CreatedDate)</th>
                    <th>@Html.DisplayNameFor(m => m.First().DueDate)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Status)</th>
                    <th>@Html.DisplayNameFor(m => m.First().AssignedTo)</th>
                    <th>@Html.DisplayNameFor(m => m.First().ProjectId)</th>
                    <th>@Html.DisplayNameFor(m => m.First().UserId)</th>
                    <th>@Html.DisplayNameFor(m => m.First().BoardId)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.TaskId</td>
                        <td class="text-start">@item.Description</td>
                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.DueDate?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(item.Status == "Done" ? "bg-success" : "bg-warning text-dark")">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.AssignedTo</td>
                        <td>@item.ProjectId</td>
                        <td>@item.UserId</td>
                        <td>@item.BoardId</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.TaskId" class="btn btn-sm btn-warning">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-sm btn-info text-white">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.TaskId" class="btn btn-sm btn-danger">Xoá</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
