@model IEnumerable<LuanVanTotNghiep.Models.TaskFileItem>

@{
    ViewData["Title"] = "Tệp đính kèm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách tệp</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-upload"></i> Tải tệp lên
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().FileId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TaskId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().FileName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().FilePath)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UploadedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.FileId</td>
                        <td>@item.TaskId</td>
                        <td class="text-start text-truncate" style="max-width: 180px;">@item.FileName</td>
                        <td class="text-start text-truncate" style="max-width: 250px;">
                            <a href="@item.FilePath" target="_blank">@item.FilePath</a>
                        </td>
                        <td>@item.UploadedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.UserId</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.FileId" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.FileId" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.FileId" class="btn btn-sm btn-danger" title="Xoá">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
