@model IEnumerable<LuanVanTotNghiep.Models.CommentItem>

@{
    ViewData["Title"] = "Bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách bình luận</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm bình luận
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().CommentId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TaskId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Content)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.CommentId</td>
                        <td>@item.TaskId</td>
                        <td>@item.UserId</td>
                        <td>@item.UserName</td>
                        <td class="text-start">@item.Content</td>
                        <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-sm btn-danger" title="Xoá">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
