@model IEnumerable<LuanVanTotNghiep.Models.ReportItem>

@{
    ViewData["Title"] = "Danh sách báo cáo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách báo cáo</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-file-earmark-plus"></i> Tạo báo cáo mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ReportId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ProjectId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ReportName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ReportType)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.ReportId</td>
                        <td>@item.ProjectId</td>
                        <td class="text-start">@item.ReportName</td>
                        <td class="text-start text-truncate" style="max-width: 200px;">@item.Description</td>
                        <td>@item.ReportType</td>
                        <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.UserId</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Update" asp-route-id="@item.ReportId" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="ReportDetail" asp-route-id="@item.ReportId" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ReportId" class="btn btn-sm btn-danger" title="Xoá">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
