@model IEnumerable<LuanVanTotNghiep.Models.GroupItem>

@{
    ViewData["Title"] = "Danh sách nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; // Đảm bảo đúng layout
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách nhóm</h2>
        <a asp-action="Create" class="btn btn-primary">+ Tạo nhóm mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.First().GroupId)</th>
                    <th>@Html.DisplayNameFor(m => m.First().GroupName)</th>
                    <th>@Html.DisplayNameFor(m => m.First().GroupSize)</th>
                    <th>@Html.DisplayNameFor(m => m.First().UserId)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.GroupId</td>
                        <td class="text-start">@item.GroupName</td>
                        <td>@item.GroupSize</td>
                        <td>@item.UserId</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-sm btn-warning">Sửa</a>
                                <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-sm btn-info text-white">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-sm btn-danger">Xoá</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
