@model IEnumerable<LuanVanTotNghiep.Models.MembershipItem>

@{
    ViewData["Title"] = "Gói thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách gói thành viên</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm gói mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().PlanId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PlanName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DurationInDays)</th>
                    <th>@Html.DisplayNameFor(model => model.First().MaxGroups)</th>
                    <th>@Html.DisplayNameFor(model => model.First().MaxGroupMember)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.PlanId</td>
                        <td class="text-start">@item.PlanName</td>
                        <td>@item.DurationInDays ngày</td>
                        <td>@item.MaxGroups</td>
                        <td>@item.MaxGroupMember</td>
                        <td>@(item.Price?.ToString("N0") ?? "0") đ</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Update" asp-route-id="@item.PlanId" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="MemDetail" asp-route-id="@item.PlanId" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PlanId" class="btn btn-sm btn-danger" title="Xoá">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
