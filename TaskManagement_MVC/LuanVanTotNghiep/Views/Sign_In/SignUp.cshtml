@model LuanVanTotNghiep.Models.SignUpItem

@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(90deg, rgba(255,71,87,1) 23%, rgba(139, 4, 201, 1) 50%, rgba(43,148,233,1) 100%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #ff6b6b;
            border: none;
            border-radius: 10px;
            padding: 10px 15px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #ff4757;
                box-shadow: 0 4px 10px rgba(255, 71, 87, 0.5);
            }

        .form-control {
            border-radius: 10px;
            padding: 10px 15px;
        }

        .social-login {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .social-btn {
            font-size: 1.8rem;
            color: #555;
            transition: 0.3s;
        }

            .social-btn:hover {
                color: #ff4757;
            }

        .send-code-btn {
            white-space: nowrap;
            border-radius: 10px;
        }
    </style>
</head>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 login-card" style="width: 400px;">
        <h2 class="text-center mb-4">Sign Up</h2>

        <form asp-action="SignUp">
            <div class="mb-3">
                <label>Email:</label>
                <input class="form-control" asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Password:</label>
                <input class="form-control" asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Confirm Password:</label>
                <input class="form-control" asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex align-items-center gap-2">
                <div class="flex-grow-1">
                    <input class="form-control" asp-for="Code" type="text" placeholder="Enter Code" class="form-control" />  
                </div>
                <button class="btn btn-secondary send-code-btn" type="submit" name="action" value="sendcode">Send Code</button>
            </div>

            <div class="text-center">
                <button class="btn btn-primary w-100" type="submit" name="action" value="signup">Submit</button>
            </div>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center mt-3">@ViewBag.Error</p>
            }

            <div class="d-flex justify-content-center align-items-center mt-3 gap-2">
                <span class="mb-0">Already have an account?</span>
                <a asp-area="" asp-controller="Sign_in" asp-action="Index">Login</a>
            </div>

            <div class="social-login">
                <a href="/Sign_in/ExternalLogin?provider=Google" class="social-btn" title="Login with Google">
                    <i class="fab fa-google"></i>
                </a>
                <a href="/Sign_in/ExternalLogin?provider=Facebook" class="social-btn" title="Login with Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </div>
        </form>
    </div>
</div>
